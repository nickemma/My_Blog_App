<section >
  <%= render'partials/user', user: @user %>
    <% @posts.each do |post| %>
   <a href="/users/<%= @user.id %>/posts/<%= post.id %>">
    <ul class="post-list">
    <%= render 'partials/post', post: post %></ul>
    <ul class="comments-list">
      <% if post.comments_counter > 0 %>
            <%= render 'partials/comment', comments: post.recent_five_comments %>
      <% else %>
        <li>No comments</li>
      <% end %>
      <ul>
   <a>
    <% end %>

  <button type='button'>Pagination</button>
</section>